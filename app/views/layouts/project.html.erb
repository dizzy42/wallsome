<%= render :partial => "layouts/header" %>

<div id="page_wrapper">

  <div id="header">

    <%= render :partial => "layouts/top_menu_right" %>

    <div id="logo">
      <h2>
          <%= link_to "Basecamp Account", basecamp_accounts_path %> :
          <%= current_account.name %> |
          <%= link_to "Project", projects_path %> :
          <%= current_project.name %>
      </h2>
    </div>

    <ul id="tabs">
      <li><%= link_to "Current Milestone",
                      current_project_milestones_path(:basecamp_account_name => current_account.name, :project_id => current_project.id),
                      :class => highlight_current_milestone_tab? ? 'active spinner' : 'spinner' %>
      </li>
      <li>
        <%= link_to "Milestones",
                    project_milestones_path(:basecamp_account_name => current_account.name, :project_id => current_project.id),
                    :class => highlight_milestones_tab? ? 'active spinner' : 'spinner' %>
      </li>
      <li><%= link_to "Backlog",
                      project_backlog_path(:basecamp_account_name => current_account.name, :project_id => current_project.id),
                      :class => highlight_backlog_tab? ? 'active spinner' : 'spinner' %>
      </li>
      <li><%= link_to "Columns",
                      edit_project_columns_path(:basecamp_account_name => current_account.name, :project_id => current_project.id),
                      :class => highlight_columns_tab? ? 'active spinner' : 'spinner' %>
      </li>
    </ul>

  </div>

  <div id="workspace">

    <%= yield %>

  </div>

  <div id="layout_footer"></div>

  </div>

  <div id="footer">

    <div id="copyright">
      <span id="company">Wallsome - A Scrum board for your Basecamp projects.</span>
    </div>

    <div id="footer_menu">
    </div>

    <div id="disclaimer">
    </div>
  </div>

</div>

<%= render :partial => "layouts/footer" %>
